<Window x:Class="PhotoShopDB.NewClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoShopDB"
        mc:Ignorable="d"
        Title="NewClient" Height="450" Width="400"
        Background="#FF2B2BC5"
        WindowStartupLocation="CenterScreen">
    <Grid >
        <StackPanel Margin="20" Width="200">
            <Label  Content="Фамилия" Style="{StaticResource niceLabel}"/>
            <TextBox x:Name="lName"/>

            <Label  Content="Имя" Style="{StaticResource niceLabel}"/>
            <TextBox x:Name="fName"/>

            <Label  Content="Отчество" Style="{StaticResource niceLabel}"/>
            <TextBox x:Name="mName"/>

            <Label  Content="Телефон" Style="{StaticResource niceLabel}"/>
            <TextBox x:Name="phone"/>

            <Label  Content="Почта" Style="{StaticResource niceLabel}"/>
            <TextBox x:Name="email"/>

            <Button x:Name="btnConfirm" Content="Confirm"
                    Style="{StaticResource LogInButtonStyle1}"
                    Margin="0 20" Click="btnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
